{
  "name": "pulp",

  "pulp_chip_family" : "pulp",
  "pulp_chip_version": 0,
  "boot_from_rom": false,

  "hal_files": [ "hal/chips/pulp/pulp.h" ],
  "archi_files": [ "archi/chips/pulp/pulp.h", "archi/chips/pulp/memory_map.h", "archi/chips/pulp/properties.h", "archi/chips/pulp/apb_soc.h" ],


  "vp_class": "pulp/chip",

  "vp_comps": [ "soc", "soc_clock", "padframe" ],

  "vp_bindings": [
    ["soc_clock->out", "soc->clock"],
    ["soc/udma->spim0", "padframe->spim0"]
  ],

  "padframe": {
    "includes": [ "chips/pulp/padframe.json" ]
  },

  "soc_clock": {
    "vp_class": "vp/clock_domain",
    "frequency": 100000000
  },

  "soc": {
    "includes" : ["chips/pulp/soc.json"],

    "fc": {
      "includes"  : ["ips/ri5ky_v2_fpu.json"],
      "cluster_id": 31,
      "core_id"   : 0,
      "fetch_enable"     : true,
      "boot_addr" : "0x1C008000"
    },

    "fll": {
      "includes"  : ["ips/fll_v1.json"]
    },

    "soc_ico": {
      "peripherals": {

        "fll0": {
          "offset": "0x00000000",
          "size"  : "0x00000010"
        },

        "fll1": {
          "offset": "0x00000010",
          "size"  : "0x00000010"
        }

      }
    }

  }
}