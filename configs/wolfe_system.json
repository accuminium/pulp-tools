{

  "system_tree": {
    "includes": [ "pulp_system_common.json" ],

    "vp_class" : "pulp/system",

    "vp_comps": [ "board" ],

    "board": {
      "vp_class": "pulp/board",

      "vp_comps": [ "pulp_chip/wolfe" ],

      "devices": ["hyperram0", "hyperflash0"],

      "pulp_chip": {
        "wolfe" : {
          "includes": ["wolfe.json"]
        }
      },
      "hyperram0": {
        "size": "0x00800000"
      },
      "hyperflash0": {
        "size": "0x00800000"
      },
      "bindings": [
        ["pulp_chip.hyper0", "hyperram0"],
        ["pulp_chip.hyper0", "hyperflash0"]
      ]
    },

    "peripherals": {

    }
  },

  "loader": {
    "boot": {
      "mode": "rom"
    }
  }

}

