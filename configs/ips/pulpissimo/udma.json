{
  "version": 2.1,
  "archi"  : 2,

  "hal_files": [ "hal/udma/udma_v2.h", "hal/udma/udma_periph_v2.h", "hal/udma/udma_periph_i2s_v1.h" ],
  "archi_files": [ "archi/udma/udma_v2.h", "archi/udma/udma_periph_v2.h" ],
  
  "nb_channels": 7,

  "interfaces" : ["memcpy", "spim", "i2c", "i2s", "uart", "cam"],

  "uart": {
    "version"      : 1,
    "nb_channels"  : 1,
    "ids"          : [0],
    "offsets"      : ["0x00"]
  },

  "memcpy": {
    "version"      : 1,
    "nb_channels"  : 1,
    "ids"          : [1],
    "offsets"      : ["0x080"]
  },

  "spim": {
    "version"      : 2,
    "nb_channels"  : 1,
    "ids"          : [2],
    "offsets"      : ["0x100"]
  },

  "i2c": {
    "version"      : 2,
    "nb_channels"  : 2,
    "ids"          : [3, 4],
    "offsets"      : ["0x180", "0x200"]
  },

  "i2s": {
    "version"      : 1,
    "nb_channels"  : 2,
    "ids"          : [5],
    "offsets"      : ["0x280"]
  },

  "cam": {
    "version"      : 1,
    "nb_channels"  : 1,
    "ids"          : [6],
    "offsets"      : ["0x300"]
  }
}
